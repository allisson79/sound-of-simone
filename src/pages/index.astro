---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import StickyBrandBar from '../components/StickyBrandBar.astro';
import Section from '../components/Section.astro';
import Card from '../components/SimpleCard.astro';
import ProofStrip from '../components/ProofStrip.astro';
import BookingSkeleton from '../components/BookingSkeleton.astro';
import ContactInfo from '../components/ContactInfo.astro';
import AboutSimone from '../components/AboutSimone.astro';
import CTA from '../components/CTA.astro';
import BottomPillMenu from '../components/BottomPillMenu.astro';
import BottomMenuOverlay from '../components/BottomMenuOverlay.astro';
---

<Layout title="Sound of Simone">
  <StickyBrandBar />

  <main class="home-page" id="top">
    <Hero />
    <ProofStrip />
    <BookingSkeleton />
    <ContactInfo />

    <Section
      id="tjenester"
      title="Tjenester"
      subtitle="Klinisk oppfolging med tydelig vurdering, konkret plan og trygg gjennomforing."
    >
      <div class="grid-3">
        <Card title="Underlivsplager" text="Systematisk kartlegging og fysioterapeutisk behandling tilpasset ditt behov." />
        <Card title="Vaginisme" text="Trinnvis behandlingslop med fokus pa trygghet, funksjon og mestring." />
        <Card title="Foredrag og fagformidling" text="Faglige foredrag om kvinnehelse for klinikker, seminarer og fagmiljoer." />
      </div>
    </Section>

    <section class="trust-strip" aria-label="Hvorfor velge Sound of Simone">
      <div class="container trust-grid">
        <article class="trust-item">
          <h3 data-reveal>Faglig tyngde</h3>
          <p data-reveal>Klinisk arbeid og fagfokus innen kvinnehelse og relaterte funksjonsplager.</p>
        </article>
        <article class="trust-item">
          <h3 data-reveal>Tydelig kommunikasjon</h3>
          <p data-reveal>Du far konkrete steg, realistiske forventninger og en plan som er lett a folge.</p>
        </article>
        <article class="trust-item">
          <h3 data-reveal>Trygg prosess</h3>
          <p data-reveal>Oppfolgingen tilpasses deg med tydelige vurderinger underveis.</p>
        </article>
      </div>
    </section>

    <AboutSimone />

    <section class="faq-teaser" id="faq" aria-labelledby="faq-tittel">
      <div class="container faq-layout">
        <div class="faq-copy">
          <p class="faq-kicker" data-reveal>Vanlige spørsmål</p>
          <h2 id="faq-tittel" data-reveal>Praktisk informasjon for nye pasienter</h2>
          <p data-reveal>
            Her finner du korte svar pa de vanligste sporsmalene om oppstart og booking.
          </p>
        </div>
        <div class="faq-list">
          <details class="faq-item">
            <summary>Trenger jeg henvisning?</summary>
            <p>Dette avhenger av tjeneste og behov. Ta kontakt, sa avklarer vi riktig lop.</p>
          </details>
          <details class="faq-item">
            <summary>Hvordan bestiller jeg time?</summary>
            <p>I denne fasen bestiller du via e-post eller telefon. Physica kobles i neste fase.</p>
          </details>
          <details class="faq-item">
            <summary>Tilbyr dere faglige foredrag?</summary>
            <p>Ja, vi vurderer foredragsforesporsler lopende. Send tema og behov via kontaktseksjonen.</p>
          </details>
        </div>
      </div>
    </section>

    <CTA />
  </main>

  <BottomPillMenu />
  <BottomMenuOverlay />
</Layout>
