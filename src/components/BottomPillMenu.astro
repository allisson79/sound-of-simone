---
import { homepageContent } from '../config/homepage';
import { BOOKING_URL } from '../config/site';
import WaveAnimation from './ui/WaveAnimation.astro';
---

<nav class="bottom-pill-menu" aria-label="Hurtigmeny">
  {
    homepageContent.bottomQuickNav.map((item) =>
      item.kind === 'menu' ? (
        <button
          type="button"
          class="bottom-pill bottom-pill--menu"
          data-bottom-menu-toggle
          aria-expanded="false"
          aria-controls="bottom-menu-overlay"
        >
          <span aria-hidden="true">
            <WaveAnimation
              size="sm"
              animationSpeed="normal"
              class="bottom-pill__wave bottom-pill__wave--interactive"
              ariaLabel="Menybølge"
            />
          </span>
          <span class="sr-only">Åpne meny</span>
        </button>
      ) : (
        <a
          href={item.href}
          class={
            item.href === BOOKING_URL ||
            item.label.toLowerCase().includes('bestill') ||
            item.label.toLowerCase() === 'booking'
              ? 'bottom-pill bottom-pill--booking'
              : 'bottom-pill'
          }
        >
          {item.label}
        </a>
      )
    )
  }
</nav>
