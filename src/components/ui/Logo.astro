 * The Sound of Simone wordmark logo with distinctive parallel vertical lines.
 * Uses the brand color and supports customization via props.
 */

interface Props {
  size?: 'sm' | 'base' | 'lg' | 'xl';
  color?: string;
  class?: string;
  ariaLabel?: string;
}

