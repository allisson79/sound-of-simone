---
import { BOOKING_URL, BRAND_COLOR, DEV_MODE } from '../config/site';
---

<section class="hero" aria-labelledby="hero-title" style={`--homepage-brand: ${BRAND_COLOR};`}>
  <div class="hero-bg" aria-hidden="true"></div>

  <div class="container hero-layout">
    <aside class="hero-visual" aria-hidden="true">
      <div class="placeholder-image placeholder-image--large">
        <p class="placeholder-label">Generisk eksempelbilde</p>
        <div class="placeholder-line placeholder-line--wide"></div>
        <div class="placeholder-line"></div>
        <div class="placeholder-line placeholder-line--short"></div>
      </div>
      <div class="placeholder-image placeholder-image--small">
        <p class="placeholder-badge">Eksempel</p>
      </div>
    </aside>

    <div class="hero-content">
      {DEV_MODE && <p class="hero-preview">Forhåndsvisning</p>}
      <p class="hero-kicker">Sound of Simone</p>
      <h1 id="hero-title">Fysioterapi med fordypning i kvinnehelse</h1>
      <p class="hero-lead">
        Skreddersydde behandlingsforløp for deg som ønsker helhetlig oppfølging, trygghet og ro i
        møte med kroppen din.
      </p>
    </div>
  </div>

  <nav class="floating-nav" aria-label="Fagområder">
    <a class="hero-chip" href="#tjenester">Urologi</a>
    <a class="hero-chip" href="#tjenester">Fertilitet</a>
    <a class="hero-chip" href="#tjenester">Gynekologi</a>
    <a class="hero-chip" href="#tjenester">Ortopedi</a>
    <a class="hero-chip" href="#tjenester">Flere fagområder</a>
    <a class="hero-chip hero-chip--cta" href={BOOKING_URL}>Bestill time</a>
  </nav>
</section>
