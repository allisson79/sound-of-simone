---
import { BOOKING_URL, BRAND_COLOR } from '../config/site';
import { homepageContent } from '../config/homepage';
---

<section class="cta-band" style={`--homepage-brand: ${BRAND_COLOR};`} aria-label="Bestill time">
  <div class="container cta-band__inner">
    <h2 data-reveal style="--reveal-delay: 120ms;">{homepageContent.ctaBand.title}</h2>
    <div class="cta-band__actions" data-reveal style="--reveal-delay: 180ms;">
      <a href={BOOKING_URL} class="hero-btn hero-btn--light">{homepageContent.ctaBand.primaryLabel}</a>
      <a href="/kontakt" class="hero-btn cta-band__ghost">{homepageContent.ctaBand.secondaryLabel}</a>
    </div>
  </div>
</section>
